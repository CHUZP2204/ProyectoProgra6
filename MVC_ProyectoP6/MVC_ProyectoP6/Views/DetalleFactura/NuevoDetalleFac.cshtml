
@{
    ViewBag.Title = "NuevoDetalleFac";
}

<div class="jumbotron">
    <h2>Nuevo Detalle Factura</h2>
    <form id="frmNuevoDetalleFac" method="post">

        <div class="form-group">
            <label>Tipo Servicio/Producto:</label>
            <select name="idSOP" id="idSOP" class="form-control">
                <option value="">Favor seleccione</option>
                @{

                    foreach (MVC_ProyectoP6.Models.sp_RetornaServicioOProducto_Result ModeloSOP in this.ViewBag.ListaTipoSOP)
                    {
                        <option value="@ModeloSOP.idSOP">@ModeloSOP.TipoSOP</option>
                    }


                }
            </select>
        </div>

        <div class="form-group">
            <label>Cantidad:</label>
            <input type="number" name="CantidadSOP" id="CantidadSOP" class="form-control" />
        </div>

        <div class="form-group">
            <label>Precio:</label>
            <select name="PrecioSOP" id="PrecioSOP" class="form-control">
            </select>
        </div>

        <div class="form-group">
            <label>Factura#:</label>
            <select name="idEncabezadoFact" id="idEncabezadoFact" class="form-control">
                <option value="">Favor seleccione</option>
                @{

                    foreach (MVC_ProyectoP6.Models.sp_RetornaEncFactura_Result ModeloEncabezado in this.ViewBag.ListaEncabezado)
                    {
                        <option value="@ModeloEncabezado.idEncabezadoFac">@ModeloEncabezado.idCliente</option>
                    }


                }
            </select>
        </div>


        <div class="form-group">
            <input type="submit" value="Agregar" id="btnAgregar" class="btn btn-success" />
        </div>
    </form>
    <a href="~/DetalleFactura/ListaDetalleFactura" class="btn btn-primary">Lista Detalle Factura</a>
</div>

@section scripts{
    <script src="~/Scripts/DetalleFactura/cargaSyP.js"></script>
}