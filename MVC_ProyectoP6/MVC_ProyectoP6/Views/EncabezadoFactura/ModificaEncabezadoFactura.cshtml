
@{
    ViewBag.Title = "ModificaEncabezadoFactura";
}


<div class="jumbotron">
    <h2> Modificando Encabezados de Facturas</h2>

    <form id="EncabezadoFactura" method="post">

        <div class="form-group">
            <label>Clientes :</label>
            <select name="idCliente" id="idCliente" class="form-control" >
                <option value = " @Model.idCliente ">Seleccione un Cliente</option>
                @{
                    foreach (MVC_ProyectoP6.Models.sp_RetornaClientes_Result clientes
                        in this.ViewBag.ListaClientes)
                    {
                        <option value="@clientes.idCliente">@clientes.NombreCompleto.ToUpper() </option>
                    }
                }
            </select>
        </div>


        <div class="form-group">
            <label>Vehiculo :</label>
            <select name=idVehiculo id="idVehiculo" class="form-control" >
                <option value="@Model.idVehiculo ">Seleccione la placa del vehiculo</option>
                @{
                    foreach (MVC_ProyectoP6.Models.sp_RetornaVehiculo_Result vehiculos
                        in this.ViewBag.ListaVehiculos)
                    {
                        <option value="@vehiculos.idVehiculo">@vehiculos.PlacaVehiculo.ToUpper() </option>
                    }
                }
            </select>
        </div>

        <div class=" form-group">
            <label>Fecha</label>
            <input type="text" name="Fecha" id="Fecha" class="form-control" value="@Model.Fecha" readonly />
            <input type="date" name="Fecha" id="Fecha" class="form-control" />
        </div>

        <div class=" form-group">
            <label>Monto Total Servicios</label>
            <input type="text" name="MontoTotalServicios" id="MontoTotalServicios" class="form-control" value="@Model.MontoTotalServicios" />
        </div>


        <div class="form-group">
            <label>estado :</label>
            <select name="estadofactura" id="estado" class="form-control" value="@Model.EstadoFactura">
                <option value="@Model.EstadoFactura ">seleccione estado factura </option>

                <option value="activa">activa</option>

            </select>
        </div>

        @* <div class=" form-group">
                <label>Estado</label>
                <input type="text" name="EstadoFactura" id="EstadoFactura" class="form-control" />
            </div> *@


        <div class="form-group">
            <label>Detalle :</label>
            <select name="idDetalleFac" id="idDetalleFac" class="form-control" ">
                <option value=" @Model.idDetalleFac  " >Seleccione el Detalle</option>
                @{
                    foreach (MVC_ProyectoP6.Models.sp_RetornaDetalleFac_Result detalle in
                        this.ViewBag.ListaDetalles)
                    {
                        <option value="@detalle.idDetalleFac">Factura# @detalle.idDetalleFac </option>
                    }
                }
            </select>
        </div>

        <div class=" form-group">
            <input type="submit" value="Modificar" id="btnGuardar" class="btn btn-primary" />

        </div>

        <a href="~/EncabezadoFactura/ListaEncabezadoFactura" class="btn btn-success">Lista Encabezados Facturas</a>

    </form>


</div>

