
@section css{
    <link href="~/Content/jqueryIU.css" rel="stylesheet" />
}

<div class="jumbotron">
    <h1 style="text-align:center">Bienvenido</h1>
    <p class="lead" style="text-align:center">
        Sea Al Proyecto Programacion 6, Nuestra Pagina De Prueba
        Es Un gusto Estar A Su Servicio, <br />
        Recordar Iniciar sesion Para Acceder A  <br />
        Todas Las Funcionalidades Del Sistema
    </p>

    <!--Contenedor De Formulario-->
    <div class="container" style="background-color: #fafafa; border: 1px solid #ccc">
        <div class="row">
            <!--Formulario-->
            <form id="frmInicioSesion" style="margin-bottom: 5px;margin-top:5px">
                <!--Divs De Los Inputs-->
                <div style="padding-left: 10px;padding-right: 10px;margin-left: 35%;margin-right: 30%;max-width: 100%;border: 1px solid #808080;background-color:azure">
                    <h2 class="text-center">Inicio Sesion</h2>
                    <div class="form-group">
                        <i class="fas fa-user" style="float:left"></i>
                        <input type="text" name="Correo" id="Correo" class="form-control" placeholder="Username" style="max-width:90%">
                    </div>

                    <div class="form-group">
                        <i class="fas fa-lock" style="float:left"></i>
                        <input type="password" name="Contrasenia" id="Contrasenia" class="form-control" placeholder="Password" style="max-width:90%">
                    </div>

                    <label class="pull-left checkbox-inline" style="padding-bottom:15px"><input type="checkbox"> Recordar Datos</label>

                    <!--Boton Inicio Sesion-->
                    <div style="padding-left:10px;padding-right:10px;padding-bottom:15px">
                        <div class="clearfix" style="max-width:100%;text-align:center;padding-bottom:5px">
                            <button type="button" id="btnAceptar" class="btn btn-success btn-block">Iniciar Sesion</button>
                        </div>
                    </div>
                    <!--Fin Boton-->
                    <!--Botones-->
                    <p class="text-center"><input type="button" class="btn btn-success" id="btMostrarDialog" value="Registrarse" /></p>
                    <p class="text-center"><a class="btn btn-warning">Nueva Clave?</a></p>
                    <!--Fin De Botones-->
                </div>
                <!--Fin Inputs-->
            </form>
            <!--Fin Formulario-->
        </div>
    </div>
    <!--Fin Contenedor-->
    <div class="row">
        <div class="col-md-4">
            <h3>SERVIRAPIDOS WYJ SA</h3>
            <img src="~/Images/Logo.png" style=" padding-left: 10px;padding-right: 10px;margin-left: 5%;margin-right: 30%;max-width: 100%;border: 1px solid #808080" />

        </div>
        <div class="col-md-4">
            <h3>Excelente Mantenimiento</h3>
            <img src="~/Images/mecanica2.png" style="margin-left:8%;width:200px;border: 1px solid #808080"  />
        </div>
        <div class="col-md-4">
            <h3>Tu Seguridad Primero</h3>
            <img src="~/Images/mecanica.png" style="margin-left: 8%; width: 200px;border: 1px solid #808080" />
        </div>
    </div>

</div>
<!-- Modal Exitoso-->
<div id="myModalExitoso" class="modal fade bd-example-modal-sm" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header" style="color:aliceblue;background-color:green">

                <h4 class="modal-title">Inicio Exitoso!</h4>
            </div>
            <div class="modal-body">

                <h3 id="Bienvenida"></h3>
            </div>
            <div class="modal-footer">
                <div class='spinner'></div>
                <p>........Espere Por Favor</p>

            </div>
        </div>
    </div>
</div>
<!--Modal-->
<!--Modal De Error-->
<div id="myModalErrorSesion" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header" style="color:aliceblue;background-color:red">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Error Al Iniciar!!</h4>

            </div>
            <div class="modal-body">
                <h3>No Se Pudo Ingresar Al Sistema</h3>
                <p>Verifique Su Clave O Correo</p>
            </div>
            <div class="modal-footer">
                <div class='spinner'></div>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div id="divDialog" hidden>
    <form id="frmRegistraUsuario">
        <!--Espacio Cedula-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Cedula</label>
            <div class="col-sm-7">
                <input type="text" name="Cedula" id="Cedula" class="form-control" />
            </div>
        </div>
        <!--Espacio Fecha Nacimiento-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Fecha Nacimiento</label>
            <div class="col-sm-7">
                <input type="date" name="FechaNacimiento" id="FechaNacimiento" class="form-control" />
            </div>
        </div>
        <!--Espacio Genero-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Genero</label>
            <div class="col-sm-7">
                <select name="Genero" id="Genero" class="form-control">
                    <option value="">Seleccione Un Genero</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Indefenido">Indefinido</option>
                </select>
            </div>
        </div>
        <!--Espacio Nombre-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Nombre Completo: </label>
            <div class="col-sm-7">
                <input type="text" name="NombreCompleto" id="NombreCompleto" class="form-control" />
            </div>
        </div>
        <!--Espacio Correo-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Correo: </label>
            <div class="col-sm-7">
                <input type="email" name="Correo" id="CorreoIngresado" class="form-control" />
            </div>
        </div>
        <!--Espacio Provincia-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Provincia: </label>
            <div class="col-sm-7">
                <select name="idProvincia" id="idProvincia" class="form-control">
                    <option value="">Seleccione Una Provincia</option>
                    @{ foreach (MVC_ProyectoP6.Models.sp_RetornaProvincias_Result provincia in this.ViewBag.ListaProvincias)
                        {
                            <option value="@provincia.id_Provincia">@provincia.Provincia</option>
                        }
                    }
                </select>
            </div>

        </div>
        <!--Espacio Canton-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Canton: </label>
            <div class="col-sm-7">
                <select name="idCanton" id="idCanton" class="form-control">
                    <option value="">Seleccione Un canton</option>
                </select>
            </div>
        </div>
        <!--Espacio Distrito-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Distrito: </label>
            <div class="col-sm-7">
                <select name="idDistrito" id="idDistrito" class="form-control">
                    <option value="">Seleccione Un Distrito</option>
                </select>
            </div>
        </div>
        <!--Espacio Tipo Usuario-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Tipo Usuario</label>
            <div class="col-sm-7">
                <select name="TipoUsuario" id="TipoUsuario" class="form-control">
                    <option value="">Seleccione Tipo Usuario</option>
                    <option value="Cliente">Cliente</option>
                </select>
            </div>
        </div>
        <!--Espacio-->
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Contraseña:</label>
            <div class="col-sm-7">
                <input type="password" name="Contrasenia" id="ContraseniaObtenida" class="form-control" />
            </div>
        </div>
        <!--Espacio Boton-->
        <input id="registrar" class="btn btn-success" value="Guardar" />
    </form>
</div>
<div id="messageRegistrarse"></div>
<div id="mensaje"></div>
@section scripts{
    <script src="~/Scripts/Usuarios/InicioSesion.js"></script>

    <script src="~/Scripts/jquery_IU.js"></script>
    <script src="~/Scripts/Usuarios/jqueryIUEventos.js"></script>
    <script src="~/Scripts/Usuarios/Registrase.js"></script>
