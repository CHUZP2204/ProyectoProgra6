
@{
    ViewBag.Title = "ListaPaisFabricante";
}

<form id="Buscar" method="post">
    <div class="jumbotron">
        <label>Pais Fabricante</label>
        <input type="text" name="PaisFabricante" id="PaisFabricante" class="form-control" />
        <br />
        <div class="form-group">
            <input type="submit" value="Buscar" id="btnBuscar" class="btn btn-success" />
        </div>


    </div>
</form>


<div class="jumbotron">
    <h2>Lista de Paises Fabricantes</h2>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Pais Fabricante </th>
                <th>Codigo Pais</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (MVC_ProyectoP6.Models.sp_RetornaPaisFabricante_Result posicionModelo
                 in this.Model)
                {
                    <tr>
                        <td>@posicionModelo.PaisFabricante</td>
                        <td>@posicionModelo.CodigoPaisFabricante</td>

                        <td>
                            <a href="~/PaisFabricacion/ModificaPaisFabricante?idPaisFabricante=@posicionModelo.idPaisFabricante" class="btn btn-primary">Modificar</a>
                            <a href="~/PaisFabricacion/EliminaPaisFabricante?idPaisFabricante=@posicionModelo.idPaisFabricante" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a href="~/PaisFabricacion/NuevoPaisFabricante" class="btn btn-success">Agregar Nuevo Pais</a>
    <a href="~/Home/Index" class="btn btn-primary">Inicio</a>



</div>








